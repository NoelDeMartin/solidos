#!/bin/bash
set -e

unset PREFIX npm_config_prefix
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

nvm install v10
nvm use 10
npm install -g npm-check-updates

nvm install v11.15.0
nvm use 11.15.0
npm install -g npm-check-updates

nvm install v12.7.0
nvm use 12.7.0
npm install -g npm-check-updates

nvm install v12.19.1
nvm use 12.19.1
npm install -g npm-check-updates

nvm install 13.14.0
nvm use 13.14.0
npm install -g npm-check-updates

nvm install 14
nvm use 14
npm install -g npm-check-updates

